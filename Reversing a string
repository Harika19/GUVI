#reverse a string

public class String_reverse {
	public void revs(){
		String s=" hi this is sample code";
		String rev="";
		String word[]=s.split("");
		int i=0;
		for(i=word.length-1;i>=0;i--)
		{
			rev=rev+word[i];
		}
		System.out.println("reversed string " +rev);
	}
	public static void main(String args[]) {
		String_reverse ob=new String_reverse();
		ob.revs();
	}
}
